<UserControl x:Class="Bank2Kasa.View.OperationListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank2Kasa.View"
             xmlns:vm="clr-namespace:Bank2Kasa.ViewModel"
             xmlns:cnv="clr-namespace:Bank2Kasa.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="750"
             d:DataContext="{d:DesignInstance Type=vm:OperationListViewModel, IsDesignTimeCreatable=True}"
             >
    <UserControl.Resources>
        <cnv:PolishDateConverter x:Key="DateConverter" />
        <cnv:BooleanToVisibility x:Key="VisConverter" />
        <cnv:BooleanToVisibilityHidden x:Key="VisConverterH" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top" >
            <Grid  Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition Height="27"/>
                    <RowDefinition Height="27"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Grid.RowSpan="2" Margin ="5,5,5,0" Text="{Binding Settings.Year}" FontWeight="Bold" />
                <TextBlock Grid.Column="1" Grid.Row="0" Margin ="5,5,5,0" Text="Plik Kasy"/>
                <TextBox Grid.Column="2" Grid.Row="0" Margin ="5,5,5,0" Text="{Binding Settings.KasaFile, Mode=OneWay}" IsEnabled="False"/>
                <Button Grid.Column="3" Grid.Row="0" Margin ="5,5,5,0" Content="..." Width="25" Command="{Binding SelectKasa}"/>
                <Button Grid.Column="4" Grid.Row="0" Margin ="5,5,5,0" Content="Zapisz do Kasy" Width="100" Command="{Binding Save}"/>
                <TextBox Grid.Column="5" Grid.Row="0" Margin ="5,5,5,0" Text="{Binding Settings.Trashold}" MinWidth="40"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Margin ="5,5,5,0" Text="Plik importu"/>
                <TextBox Grid.Column="2" Grid.Row="1" Margin ="5,5,5,0" Text="{Binding Settings.ImportFile, Mode=OneWay}" IsEnabled="False"/>
                <Button Grid.Column="3" Grid.Row="1" Margin ="5,5,5,0" Content="..." Width="25" Command="{Binding SelectImport}"/>
                <Button Grid.Column="4" Grid.Row="1" Margin ="5,5,5,0" Content="Import" Width="100" Command="{Binding Import}"/>
            </Grid>
        </Border>
        <Border Margin="0,3,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" BorderThickness="2" CornerRadius="5" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <!--
                <HeaderedItemsControl  ItemsSource="{Binding Operations, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" AlternationCount="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:OperationView}">
                            <StackPanel >
                                <local:OperationView2 Margin="2,2,-1,2" Background="Beige" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </HeaderedItemsControl>
-->
                <DataGrid Name="dgUsers" AutoGenerateColumns="False" Background="Beige" ItemsSource="{Binding Operations, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Data">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Name="txbData" Height="25" Text="{Binding Date, Converter={StaticResource DateConverter}}" FontSize="14" FontWeight="Bold" IsEnabled="{Binding IsEditMode}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Operacja">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" MinWidth="50" >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox Height="25" Text="{Binding OperationType}" MinWidth="30" FontSize="14" FontWeight="Bold" IsEnabled="{Binding IsEditMode}" />
                                            <TextBlock Margin="10,3,0,0" FontSize="15" Text="{Binding OperationTypeName}"/>
                                        </StackPanel>

                                        <TextBox Margin="0,5,0,0" Height="25" Text="{Binding Description}" FontSize="14" FontWeight="Bold" IsEnabled="{Binding IsEditMode}" />
                                        <TextBlock Text="{Binding FullDescription}"/>
                                        <TextBlock Text="{Binding BankOperationDescription}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Amount}" HeaderStringFormat="HiddenAmount" Visibility="Collapsed"/>

                        <DataGridTemplateColumn Header="Przychód-Rozchód">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Width="100" Height="25" Text="{Binding Amount, StringFormat=F2 }" FontSize="14" FontWeight="Bold" IsEnabled="True" TextAlignment="Right" Visibility="{Binding IsEditMode, Converter={StaticResource VisConverter}}"/>
                                        <TextBox Grid.Column="0" Width="100" Height="25" Text="{Binding MoneyIn, StringFormat=F2 }" FontSize="14" FontWeight="Bold" IsEnabled="False" TextAlignment="Right" Visibility="{Binding IsNotEditMode, Converter={StaticResource VisConverter}}"/>
                                        <TextBox Grid.Column="1" Width="100" Height="25" Text="{Binding MoneyOut, StringFormat=F2 }" FontSize="14" FontWeight="Bold" IsEnabled="False" TextAlignment="Right" Visibility="{Binding IsNotEditMode, Converter={StaticResource VisConverter}}"/>

                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Grid.Row="0" Width="50" Content="Edycja" Height="50" Command="{Binding StartEdit}" Visibility="{Binding IsNotEditMode, Converter={StaticResource VisConverter}}"/>
                                        <Button Grid.Column="0" Grid.Row="0" Width="50" Content="Zakończ" Height="50" Command="{Binding EndEdit}" Visibility="{Binding IsEditMode, Converter={StaticResource VisConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Margin="5,0,5,0" Width="100" Height="50" Command="{Binding ToggleAction}" >
                                        <TextBlock Text="{Binding ActionString}" TextWrapping="WrapWithOverflow" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
    </DockPanel>

</UserControl>
